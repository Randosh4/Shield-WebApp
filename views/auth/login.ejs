<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shield signin</title>
    <link rel="stylesheet" href="/assets/css/auth-style.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"/>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>

    </style>

</head>
<body>
<!-- <div class="login-card-container"> -->
<div class="login-card">
    <div class="login-card-logo">
        <img src="/assets/images/logo.png" alt="logo">
    </div>
    <div class="login-card-header">
        <h1>Sign In</h1>
        <!-- <div>Please login to use platform</div> -->
    </div>
    <div class="login-container">
        <form class="login-card-form" id="loginForm">
            <!-- Your form items here -->
            <div class="form-item">
                <span class="form-item-icon material-symbols-outlined">mail</span>
                <input type="text" name="username" placeholder="Enter Email" required autofocus>
            </div>
            <div class="form-item">
                <span class="form-item-icon material-symbols-outlined">lock</span>
                <input type="password" name="password" placeholder="Enter Password" required>
            </div>
            <div class="form-item-other">
                <a href="#">I forgot my password</a>
            </div>

            <div class="form-item-error" id="errorContainer"></div> <!-- New div for displaying error -->

            <button type="submit" id="submitButton">Login</button>
            <div class="loading" id="loadingContainer" style="display: none;">
                <div class="spinner"></div> <!-- Basic CSS spinner -->
                Loading...
            </div>
        </form>
    </div>

</div>
<!-- </div> -->

<script>
    document.getElementById('loginForm').addEventListener('submit', function (event) {
        event.preventDefault();

        // Disable form elements and show loading indicator
        const form = event.target;
        const submitButton = form.querySelector('#submitButton');
        const loadingContainer = form.querySelector('#loadingContainer');
        submitButton.style.display = 'none';
        loadingContainer.style.display = 'block';

        const formData = new FormData(form);

        fetch('/api/auth/login', {
            method: 'POST',
            body: formData,
        }).then(response => {
            if (!response.ok) {
                //  throw new Error('Network response was not ok');
            }
            return response.json();
        }).then(data => {
            // Handle the response data as needed
            if (data.status === 200) {
                localStorage.setItem('userId', data.data.user.id);
                localStorage.setItem('type', data.data.user.type);
                localStorage.setItem('phone', data.data.user.phone);
                localStorage.setItem('name', data.data.user.firstName + " " + data.data.user.lastName);
                localStorage.setItem('status', data.data.user.status);
                window.location.href = '/auth/verify';


            } else {
                const errorContainer = document.getElementById('errorContainer');
                errorContainer.textContent = data.message;
            }
        })
            .catch(error => {
                console.error('Error:', error);

                const errorContainer = document.getElementById('errorContainer');
                errorContainer.textContent = error.toString();
            })
            .finally(() => {
                // Re-enable form elements and hide loading indicator
                submitButton.style.display = 'block';
                loadingContainer.style.display = 'none';
            });
    });
</script>

</body>
</html>